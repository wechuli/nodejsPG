
<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="" class="form-control" placeholder="" aria-describedby="helpId" value="{{ idea.title }}" required>

        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea name="details" class="form-control" cols="20" rows="10" required>{{idea.details}}</textarea>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>