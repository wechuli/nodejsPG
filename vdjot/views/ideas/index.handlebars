<div class="row">
{{each ideas}}


<div class="card card-body mb-2 ml-2 col-sm-12 col-md-5">
    <h4>{{title}}</h4>
    <p>{{details}}</p>

    <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="post">
    <input type="hidden" name="_method" value="PUT" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete" >
    </form>

</div>



{{else}}
<p>No video listed </p>

{{/each}}
</div>
